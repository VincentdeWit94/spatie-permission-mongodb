{
    "name": "vincentdewit94/spatie-permission-mongodb",
    "description": "Spatie permission library together with Jenssegers MongoDB 4",
    "keywords": [
        "laravel",
        "security",
        "mongodb",
        "permission",
        "acl",
        "spatie",
        "jenssegers"
    ],
    "homepage": "https://github.com/VincentdeWit94/spatie-permission-mongodb",
    "license": "MIT",
    "authors": [
        {
            "name": "Vincent de Wit",
            "email": "pd4vdw@gmail.com",
            "homepage": "https://github.com/VincentdeWit94",
            "role": "Developer"
        },
        {
            "name": "Mostafa Maklad",
            "email": "dev.mostafa.maklad@gmail.com",
            "homepage": "https://github.com/mostafamaklad",
            "role": "Developer"
        },
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "The original module"
        }
    ],
    "require": {
        "php": ">=7.1",
        "illuminate/auth": "^7.0",
        "illuminate/container": "^7.0",
        "illuminate/contracts": "^7.0",
        "jenssegers/mongodb": "^4.0.0-alpha.1"
    },
    "require-dev": {
        "monolog/monolog": "^2.0",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Maklad\\Permission\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Maklad\\Permission\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs --standard=psr2 src/",
        "fix-style": "phpcbf --standard=psr2 src/"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Maklad\\Permission\\PermissionServiceProvider"
            ]
        }
    }
}
